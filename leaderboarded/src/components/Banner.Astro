---
// Props for customization
const { 
  imageUrl, 
  title, 
  subtitle, 
  linkUrl, 
  linkText, 
  isDark = false, // Optional: Dark mode toggle
} = Astro.props;

const bannerClasses = `banner ${isDark ? 'banner-dark' : ''}`; 
---

<div class={bannerClasses} style={`background-image: url(${imageUrl});`}>
  <div class="banner-content">
    {title && <h2>{title}</h2>}
    {subtitle && <p>{subtitle}</p>}
    {linkUrl && linkText && <a href={linkUrl} class="banner-link">{linkText}</a>}
  </div>
</div>

<style>
  .banner {
    position: relative;
    width: 100%;
    height: 300px; /* Adjust as needed */
    background-size: cover;
    background-position: center;
    color: white; /* Default text color */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .banner-dark {
    color: #ddd; /* Lighter text for dark mode */
  }

  .banner-content {
    padding: 20px;
    background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent overlay */
    border-radius: 8px;
  }

  .banner h2 {
    font-size: 2.5rem;
    margin-bottom: 10px;
  }

  .banner p {
    font-size: 1.1rem;
    margin-bottom: 20px;
  }

  .banner-link {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
  }
</style>